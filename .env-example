# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration
# For development with MailHog
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
SMTP_FROM=noreply@example.com

# Alternative SMTP Configuration (if not using MailHog)
SMTP_HOST=127.0.0.1
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Use mock transport when MailHog is unavailable (shows emails in console)
MOCK_EMAIL=true

# SQLite Database File
DB_PATH=./database.db

# Allowed Origins (CORS)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3000/logged-out

# Allowed Hosts (Host Header Injection Prevention)
ALLOWED_HOSTS=localhost:3000,127.0.0.1:3000

# REQUIRED
JWT_SECRET=
ENCRYPTION_KEY=
CSRF_SECRET=
ENCRYPTION_IV=
