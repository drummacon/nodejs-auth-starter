<!-- user-dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <meta name="description" content="User Dashboard">
  <title>User | Home</title>
  <link rel="icon" href="/favicon.ico">
  <link rel="stylesheet" href="/css/all.min.css">
  <link rel="stylesheet" href="/css/uStyles.css">
</head>
<body>
  <div class="dashboard">
    <div class="header">
      <div class="welcome">
        <i class="fas fa-user-circle"></i>
        <span>Welcome, <%= username %>!</span>
      </div>
      <div class="header-actions">
        <button id="settings-button" class="icon-button" aria-label="Settings">
          <i class="fas fa-cog"></i>
        </button>
        <button id="logout-button" class="logout-button">
          <span class="button-content">
            <i class="fas fa-sign-out-alt"></i> Logout
          </span>
          <span class="button-spinner hidden">
            <i class="fas fa-circle-notch fa-spin"></i>
          </span>
        </button>
      </div>
    </div>

    <div class="table-container">
      <table class="dashboard-table">
        <thead>
          <tr>
            <th>Feature</th>
            <th>Description</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Analytics</td>
            <td>View detailed activity stats and trends.</td>
            <td><a href="/analytics" class="button">View</a></td>
          </tr>
          <tr>
            <td>Tasks</td>
            <td>Manage your tasks and priorities.</td>
            <td><a href="/tasks" class="button">Manage</a></td>
          </tr>
          <tr>
            <td>Projects</td>
            <td>Explore and manage your projects.</td>
            <td><a href="/projects" class="button">Explore</a></td>
          </tr>
          <tr>
            <td>Integrations</td>
            <td>Connect tools and services to enhance your workflow.</td>
            <td><a href="/integrations" class="button">Connect</a></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="status-bar">
      <span class="status-item">App Status: Online</span>
      <span class="status-item">Server: Connected</span>
      <span class="status-item">Notifications: <a href="/notifications">2 New</a></span>
    </div>
  </div>
  <script type="module" src="/js/uDashboard.js"></script>
</body>
</html>